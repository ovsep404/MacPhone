{% extends 'base.html.twig' %}

{% block stylesheets %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="/product.css" rel="stylesheet">
{% endblock %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order_date</th>
                <th>Status</th>
                <th>Quantity</th>
                <th>Unit_price</th>
                <th>Reference</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.status }}</td>
                <td>{{ order.quantity }}</td>
                <td>{{ order.unitPrice }}</td>
                <td>{{ order.reference }}</td>
                <td>{{ order.total }}</td>
                <td>
                    <a href="{{ path('app_order_admin_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_order_admin_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_admin_new') }}">Create new</a>
{% endblock %}
