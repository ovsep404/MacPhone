{% extends 'base.html.twig' %}

{% block stylesheets %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="/product.css" rel="stylesheet">
{% endblock %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Order_date</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order.quantity }}</td>
            </tr>
            <tr>
                <th>Unit_price</th>
                <td>{{ order.unitPrice }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ order.reference }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_admin_index') }}">back to list</a>

    <a href="{{ path('app_order_admin_edit', {'id': order.id}) }}">edit</a>

    {{ include('order_admin/_delete_form.html.twig') }}
{% endblock %}
