{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h2>Connexion</h2>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login_page') }}" method="post">
        <label for="email">Email :</label>
    <input type="text" id="email" name="_username" value="{{ last_email }}" required="required" />


        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" required="required" />

        <button type="submit">Connexion</button>



    <div class="extra-links">
        <a href="{{ path('register_page') }}">Créer un compte</a>
        <a href="{{ path('forgot_password_page') }}">Mot de passe oublié?</a>
    </div>


    </form>
{% endblock %}
